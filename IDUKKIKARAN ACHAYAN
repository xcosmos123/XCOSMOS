    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Navbar Scroll Logic
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('bg-black/90', 'backdrop-blur-md', 'shadow-lg');
                navbar.classList.remove('bg-transparent', 'py-5');
                navbar.classList.add('py-3');
            } else {
                navbar.classList.remove('bg-black/90', 'backdrop-blur-md', 'shadow-lg');
                navbar.classList.add('bg-transparent', 'py-5');
                navbar.classList.remove('py-3');
            }
        });

        // Mobile Menu Logic
        const menuToggle = document.getElementById('menu-toggle');
        const menuClose = document.getElementById('menu-close');
        const mobileMenu = document.getElementById('mobile-menu');
        const navLinks = document.querySelectorAll('.mobile-nav-link');

        menuToggle.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
            mobileMenu.classList.add('flex');
        });

        const closeMenu = () => {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('flex');
        };

        menuClose.addEventListener('click', closeMenu);
        navLinks.forEach(link => link.addEventListener('click', closeMenu));

        // Image Error Fallbacks
        const heroImg = document.getElementById('hero-img');
        const aboutImg = document.getElementById('about-img');
        const fallbackHero = 'https://images.unsplash.com/photo-1590484803523-24a9a42ff39b?auto=format&fit=crop&q=80&w=2000';
        const fallbackAbout = 'https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?auto=format&fit=crop&q=80&w=800';

        heroImg.onerror = function() {
            this.src = fallbackHero;
        };
        aboutImg.onerror = function() {
            this.src = fallbackAbout;
        };

        // Modal Logic for Contact button (Demo)
        const contactBtn = document.querySelector('a[href="#contact"]');
        const bookingModal = document.getElementById('booking-modal');
        const modalCloseBtn = document.getElementById('modal-close-btn');

        // Note: The contact link in nav already scrolls to footer, 
        // but we can show the modal when clicking a specific "Book Now" context.
        modalCloseBtn.addEventListener('click', () => {
            bookingModal.classList.add('hidden');
            bookingModal.classList.remove('flex');
        });

        // Styles for footer social buttons (reused in HTML)
        const socialBtns = document.querySelectorAll('.footer-social-btn');
        socialBtns.forEach(btn => {
            btn.className = "w-10 h-10 bg-neutral-900 rounded-full flex items-center justify-center text-neutral-400 hover:bg-red-600 hover:text-white transition-all";
        });
    </script>
</body>
</html>
